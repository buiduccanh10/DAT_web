<!DOCTYPE html>
<html>

<head>
    <title>Upload Excel File</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
    .spinner-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        display: none;
    }
    .spinner {
        border: 16px solid #f3f3f3;
        border-radius: 50%;
        border-top: 16px solid #3498db;
        width: 120px;
        height: 120px;
        animation: spin 2s linear infinite;
    }
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    </style>
</head>

<body>
    <h1>Tải lên file Excel phiên học</h1>
    <form id="uploadForm" action="/upload" method="post" enctype="multipart/form-data">
        <input type="file" name="file" required/>
        <button type="submit">Tải lên</button>
    </form>

    {{#if data}}
        <h2>Excel Data:</h2>
        <button id="saveButton" class="w3-btn w3-green w3-border w3-border-green w3-round">Lưu</button>
        <table border="1"  id="data-table">
        <tr style="padding: 5px;">
            <th>STT</th>
            <th>Mã Phiên</th>
            <th>Tỉ lệ</th>
            <th>Khóa học</th>
            <th>Mã học viên</th>
            <th>Họ tên</th>
            <th>Họ tên giáo viên</th>
            <th>Xe tập lái</th>
            <th>Ngày đào tạo</th>
            <th>Thời gian</th>
            <th>Quãng đường</th>
        </tr>
        {{#each data}}
            <tr>
                <td>{{lookup this 'STT'}}</td>
                <td>{{lookup this 'Mã Phiên'}}</td>
                <td>{{lookup this 'Tỉ lệ'}}</td>
                <td>{{lookup this 'Khóa học'}}</td>
                <td>{{lookup this 'Mã học viên'}}</td>
                <td>{{lookup this 'Họ tên'}}</td>
                <td>{{lookup this 'Họ tên giáo viên'}}</td>
                <td>{{lookup this 'Xe tập lái'}}</td>
                <td>{{lookup this 'Ngày đào tạo'}}</td>
                <td>{{lookup this 'Thời gian'}}</td>
                <td>{{lookup this 'Quãng đường'}}</td>
            </tr>
        {{/each}}
    </table>
    {{/if}}

    <!-- Spinner Overlay -->
    <div class="spinner-overlay" id="spinnerOverlay">
        <div class="spinner"></div>
    </div>
</body>
</html>

<script>
    // Display spinner on form submit
    const uploadForm = document.getElementById('uploadForm');
    const spinnerOverlay = document.getElementById('spinnerOverlay');

    uploadForm.addEventListener('submit', function(event) {
        spinnerOverlay.style.display = 'flex';
    });

    document.getElementById('saveButton').addEventListener('click', function () {
        const rows = document.querySelectorAll('#data-table tbody tr');
        const data = [];

        rows.forEach(row => {
            const rowData = {
                STT: row.cells[0].textContent,
                MaPhien: row.cells[1].textContent,
                TiLe: row.cells[2].textContent,
                KhoaHoc: row.cells[3].textContent,
                MaHocVien: row.cells[4].textContent,
                HoTen: row.cells[5].textContent,
                HoTenGiaoVien: row.cells[6].textContent,
                XeTapLai: row.cells[7].textContent,
                NgayDaoTao: row.cells[8].textContent,
                ThoiGian: row.cells[9].textContent,
                QuangDuong: row.cells[10].textContent,
            };
            data.push(rowData);
        });

        // Show spinner when saving data
        spinnerOverlay.style.display = 'flex';

        fetch('/save-dat-session', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        }).then(response => {
            spinnerOverlay.style.display = 'none'; // Hide spinner on response
            if (response.ok) {
                alert('Data saved successfully!');
            } else {
                alert('Error saving data.');
            }
        }).catch(error => {
            console.error('Error:', error);
            spinnerOverlay.style.display = 'none'; // Hide spinner on error
            alert('Error saving data.');
        });
    });
</script>
</body>

</html>
