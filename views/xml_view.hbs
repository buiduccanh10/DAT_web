<!DOCTYPE html>
<html>
<head>
    <title>Upload XML File</title>
</head>
<body>
    <h1>Tải lên file XML danh sách học viên</h1>
    <form action="/uploadxml" method="post" enctype="multipart/form-data">
        <input type="file" name="file" required/>
        <button type="submit">Tải lên</button>
    </form>
    {{#if data}}
    <h2>XML Data:</h2>
    <button id="saveButton" class="w3-btn w3-green w3-border w3-border-green w3-round">Lưu</button>
    <table border="1" id="data-table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã Học Viên</th>
                <th>Họ Tên</th>
                <th>Ngày Sinh</th>
                <th>Giới Tính</th>
                <th>Số CMT</th>
                <th>Ngày Cấp CMT</th>
                <th>Nơi Cấp CMT</th>
                <th>Ngày Nhận Hồ Sơ</th>
                <th>Số GPLX</th>
                <th>Hạng GPLX</th>
                <th>Nơi Cấp GPLX</th>
                <th>Ảnh</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.STT}}</td>
                <td>{{lookup this "Mã Học Viên"}}</td>
                <td>{{lookup this "Họ Tên"}}</td>
                <td>{{lookup this "Ngày Sinh"}}</td>
                <td>{{lookup this "Giới Tính"}}</td>
                <td>{{lookup this "Số CMT"}}</td>
                <td>{{lookup this "Ngày Cấp CMT"}}</td>
                <td>{{lookup this "Nơi Cấp CMT"}}</td>
                <td>{{lookup this "Ngày Nhận Hồ Sơ"}}</td>
                <td>{{lookup this "Số GPLX"}}</td>
                <td>{{lookup this "Hạng GPLX"}}</td>
                <td>{{lookup this "Nơi Cấp GPLX"}}</td>
                <td><img src="data:image/jpeg;base64,{{lookup this "Ảnh"}}" style="height: 130px; width:100px;" alt="Ảnh"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}

    <script>
        document.getElementById('saveButton').addEventListener('click', function () {
            const rows = document.querySelectorAll('#data-table tbody tr');
            const data = [];

            rows.forEach(row => {
                const rowData = {
                    STT: row.cells[0].textContent,
                    MaHocVien: row.cells[1].textContent,
                    HoTen: row.cells[2].textContent,
                    NgaySinh: row.cells[3].textContent,
                    GioiTinh: row.cells[4].textContent,
                    SoCMT: row.cells[5].textContent,
                    NgayCapCMT: row.cells[6].textContent,
                    NoiCapCMT: row.cells[7].textContent,
                    NgayNhanHoSo: row.cells[8].textContent,
                    SoGPLX: row.cells[9].textContent,
                    HangGPLX: row.cells[10].textContent,
                    NoiCapGPLX: row.cells[11].textContent,
                    Anh: row.cells[12].querySelector('img').src.split(',')[1] // Get base64 string without data:image/jpeg;base64,
                };
                data.push(rowData);
            });

            fetch('/save-data', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            }).then(response => {
                if (response.ok) {
                    alert('Data saved successfully!');
                } else {
                    alert('Error saving data.');
                }
            }).catch(error => {
                console.error('Error:', error);
                alert('Error saving data.');
            });
        });
    </script>
</body>
</html>

