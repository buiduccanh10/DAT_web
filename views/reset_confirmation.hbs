<!-- reset_confirmation.hbs -->
<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <script>
        function confirmReset() {
            if (confirm('Bạn có chắc chắn muốn thực hiện reset không?')) {
                // Nếu người dùng xác nhận, gửi yêu cầu POST đến endpoint /reset
                fetch('/reset', { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        alert('Reset thành công');
                        window.location.href = '/'; // Chuyển hướng người dùng đến trang chính
                    } else {
                        throw new Error('Lỗi khi thực hiện reset');
                    }
                })
                .catch(error => {
                    console.error(error);
                    alert('Đã xảy ra lỗi khi thực hiện reset');
                });
            }
        }
    </script>
</head>
<body>
    <h1>Xác nhận reset</h1>
    <button onclick="confirmReset()">Reset</button>
</body>
</html>
